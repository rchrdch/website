---
import ProjectPreviewCard from "../ProjectPreviewCard.astro";

import ThinDivider from "../ThinDivider.astro";
import ThickDivider from "../ThickDivider.astro";
---

<section class="bg-background">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <h2 
      class="text-xl text-blue leading-relaxed"
      data-aos="fade-up"
      data-aos-duration="2000">
      Experienced technologist with a demonstrated history of working at tech startups. 
      Skilled in full stack software engineering and product design & development. 
      Creative professional with a B.A. in Computer Science from Boston University. 
    </h2>
    <a href="/about">
      <p 
        class="mt-3 text-base text-blue font-semibold"
        data-aos="fade-up"
        data-aos-duration="2000">
          Learn more about me &nbsp; â†—
      </p>
    </a>
      
  </div>

  <div class="px-8 2xl:max-w-7xl mx-auto py-5">
    <div class="space-y-2">
      <ThinDivider duration={2000}/>
      <h3
        class="text-blue text-base font-bold"
        data-aos="fade-up"
        data-aos-duration="1500">
        <span>Design Projects</span>
      </h3>
      <ThickDivider duration={2000}/>
    </div>

    <ul
      class="mx-auto mt-32 text-blue grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 gap-y-28"
      role="list">
      <ProjectPreviewCard 
        number="01." 
        name="Decoded" 
        description="A set of animations used for company accounts across social media platforms to increase brand awareness and growth." 
        callToActionText="Check out the animations"
        link="decoded"
      />
      <ProjectPreviewCard 
        number="02." 
        name="Hercules" 
        description="A case study & personal design challenge to streamline digitized laundry management." 
        callToActionText="Check out designs"
        link="hercules"
      />
      <ProjectPreviewCard 
        number="03." 
        name="Steg.AI" 
        description="A case study on the usage page of Steg.AI's web application." 
        callToActionText="Check out the designs"
        link="stegai"
      />
