---
import ProjectPreviewCard from "./ProjectPreviewCard.astro";

import ThinDivider from "../ThinDivider.astro";
import ThickDivider from "../ThickDivider.astro";

import ExperiencesCards from "./ExperiencesCards.astro";
---

<section class="bg-background">

  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <h2 
      class="text-xl text-blue leading-relaxed"
      data-aos="fade-up"
      data-aos-duration="2000">
      Experienced technologist with a demonstrated history of working at tech startups. 
      Skilled in full stack software engineering and product design & development. 
      Creative professional with a B.A. in Computer Science from Boston University. 
    </h2>

    <div 
    class="flex space-x-6"
    data-aos="fade-up"
    data-aos-duration="2000">
      <a href="/about">
        <p 
          class="mt-3 text-base text-blue font-semibold hover:text-orange">
            Learn more about me &nbsp; ↗
        </p>
      </a>

      <a href="/skills">
        <p 
          class="mt-3 text-base text-blue font-semibold hover:text-orange">
            View my skills &nbsp; ↗
        </p>
      </a>
    </div>
  </div>

  <ExperiencesCards />

  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="space-y-2" id="design-projects">
      <ThickDivider duration={2000}/>

      <h3
        class="text-blue text-base font-bold"
        data-aos="fade-up"
        data-aos-duration="2000">
        Design Projects
      </h3>
      
      <ThinDivider duration={2000}/>
    </div>

    <ul
      class="mx-auto mt-32 text-blue grid grid-cols-1 gap-6 gap-y-28 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      role="list">
      <ProjectPreviewCard 
        number="01." 
        name="Decoded" 
        description="Animations created for company accounts to increase brand awareness and growth." 
        callToActionText="See the animations"
        link="decoded"
      />
      <ProjectPreviewCard 
        number="02." 
        name="Hercules" 
        description="Case study & personal design challenge to streamline digitized laundry management." 
        callToActionText="See the designs"
        link="hercules"
      />
      <ProjectPreviewCard 
        number="03." 
        name="Steg.AI" 
        description="Real-life case study on elevating the usage page of Steg.AI's web application." 
        callToActionText="See the designs"
        link="stegai"
      />
      <ProjectPreviewCard 
        number="04." 
        name="Kowork" 
        description="A personal project to reconnect working professionals in a remote world." 
        callToActionText="See the designs"
        link="kowork"
      />
    </ul>
  </div>
    
</section>
