---
import ProjectPreviewCard from "../ProjectPreviewCard.astro";

import ThinDivider from "../ThinDivider.astro";
import ThickDivider from "../ThickDivider.astro";

import Experience from "../../data/experience.json"
---

<section class="bg-background">

  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <h2 
      class="text-xl text-blue leading-relaxed"
      data-aos="fade-up"
      data-aos-duration="2000">
      Experienced technologist with a demonstrated history of working at tech startups. 
      Skilled in full stack software engineering and product design & development. 
      Creative professional with a B.A. in Computer Science from Boston University. 
    </h2>
    
    <a href="/about">
      <p 
        class="mt-3 text-base text-blue font-semibold"
        data-aos="fade-up"
        data-aos-duration="2000">
          Learn more about me &nbsp; â†—
      </p>
    </a>
  </div>

  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="space-y-2">
      <ThinDivider duration={2000}/>

      <h3
        class="text-blue text-base font-bold"
        data-aos="fade-up"
        data-aos-duration="2000">
        Design Projects
      </h3>
      
      <ThickDivider duration={2000}/>
    </div>

    <ul
      class="mx-auto mt-32 text-blue grid grid-cols-1 gap-6 gap-y-28 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      role="list">
      <ProjectPreviewCard 
        number="01." 
        name="Decoded" 
        description="A set of animations used for company accounts across social media platforms to increase brand awareness and growth." 
        callToActionText="Check out the animations"
        link="decoded"
      />
      <ProjectPreviewCard 
        number="02." 
        name="Hercules" 
        description="A case study & personal design challenge to streamline digitized laundry management." 
        callToActionText="Check out designs"
        link="hercules"
      />
      <ProjectPreviewCard 
        number="03." 
        name="Steg.AI" 
        description="A case study on the usage page of Steg.AI's web application." 
        callToActionText="Check out the designs"
        link="stegai"
      />
      <!-- <ProjectPreviewCard 
        number="04." 
        name="Kowork" 
        description="A personal project to reconnect users in a remote world." 
        callToActionText="Check out the project"
        link="kowork"
      /> -->
    </ul>
  </div>

  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="space-y-2">
      <ThinDivider duration={2000} />

      <h3 
      class="text-blue text-base font-bold"
      data-aos="fade-up"
      data-aos-duration="2000">
        Experience
      </h3>

      <ThickDivider duration={2000}/>
    </div>

    <ul
      class="mx-auto grid grid-cols-1 text-left divide-y-2 divide-background items-start text-background pt-5 sm:grid-cols-2 lg:grid-cols-4"
      data-aos="fade-up"
      data-aos-duration="2000">
      {
        Experience.map((template) => (
          <>
            <li class="flow-root col-span-full h-full hover:bg-transparent hover:text-blue bg-blue duration-200">
              <a
                href={template.url}
                class="flex flex-col sm:flex-row justify-between gap-6 h-full ">
                <div class="p-3">
                  <p class="italic shrink-0">{template.company}</p>
                </div>

                <div class="p-3 ">
                  <p class="text-base leading-relaxed">{template.role}</p>
                </div>
              </a>
            </li>
          </>
        ))
      }
    </ul>
  </div>
    
</section>
